# Please run this python file to unzip corpus.zip correctly
import zipfile
import shutil
import sys
import os
import subprocess

# Path to the script you want to run
script_path = "/mnt/data/add_song_maker_py"

# Run the script
subprocess.run(["python", script_path])
if '/mnt/data/' not in sys.path:
    sys.path.append('/mnt/data/')

# Unzipping the corpus
corpus_zip_path = '/mnt/data/corpus.zip'
corpus_extract_path = '/mnt/data/'

# Extract the corpus
if not os.path.exists(corpus_extract_path + "corpus"):
    with zipfile.ZipFile(corpus_zip_path, 'r') as zip_ref:
        zip_ref.extractall(corpus_extract_path)

print("""Please read: /mnt/data/corpus folder is created.
